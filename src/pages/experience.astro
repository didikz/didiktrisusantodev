        </main>
        <ContactCTA />
    </div>
</BaseLayout>

<style>
    .wrapper-timeline{
        max-width: 1080px;
        margin: 50px auto;
        padding: 0 20px;
        position: relative;
    }
    .wrapper-timeline .center-line{
        position: absolute;
        height: 100%;
        width: 4px;
        background-color: var(--accent-regular);
        left: 50%;
        top: 50px;
        transform: translateX(-50%);
    }
    .wrapper-timeline .row{
        display: flex;
        margin-bottom: 20px;
    }
    .wrapper-timeline .row-1{
        justify-content: flex-start;
    }
    .wrapper-timeline .row-2{
        justify-content: flex-end;
    }
    .wrapper-timeline .row section{
        background-color: var(--accent-regular);
        color: var(--accent-text-over);
        border-radius: 5px;
        width: calc(50% - 40px);
        padding: 20px;
        position: relative;
    }
    .wrapper-timeline .row section::before{
        position: absolute;
        content: "";
        height: 15px;
        width: 15px;
        background-color: var(--accent-regular);
        top: 28px;
        z-index: -1;
        transform: rotate(45deg);
    }
    .row-1 section::before{
        right: -7px;
    }
    .row-2 section::before{
        left: -7px;
    }
    .row section .icon,
    .center-line .scroll-icon{
        position: absolute;
        background-color: var(--accent-regular);
        height: 50px;
        width: 50px;
        text-align: center;
        line-height: 40px;
        border-radius: 50%;
        color: #3ea0e2;
        font-size: 17px;
        box-shadow: 0 0 0 4px #fff, inset 0 2px 0 rgba(0,0,0,0.08), 0 3px 0 4px rgba(0,0,0,0.05);
    }
    .center-line .scroll-icon{
        bottom: 0px;
        left: 50%;
        font-size: 25px;
        transform: translateX(-50%);
    }
    .row-1 section .icon{
        top: 10px;
        right: -65px;
    }
    .row-2 section .icon{
        top: 10px;
        left: -65px;
    }
    .row section .details,
    .row section .bottom{
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .row section .details .title{
        font-size: 22px;
        font-weight: 600;
    }
    .row section .details .subtitle{
        font-size: 15px;
        font-weight: 400;
    }
    .row section p{
        margin: 10px 0 10px 0;
        font-size: small;
    }
    .row section ul{
        font-size: small;
    }
    .row section .bottom a{
        text-decoration: none;
        background: #3ea0e2;
        color: #fff;
        padding: 7px 15px;
        border-radius: 5px;
        /* font-size: 17px; */
        font-weight: 400;
        transition: all 0.3s ease;
    }
    .row section .bottom a:hover{
        transform: scale(0.97);
    }
    .logo img{
        width: 50px;
        height: 50px;
        border-radius: 50%;
        overflow: hidden;
    }
    @media(max-width: 790px){
        .wrapper-timeline .center-line{
            left: 40px;
        }
        .wrapper-timeline .row{
            margin: 30px 0 3px 60px;
        }
        .wrapper-timeline .row section{
            width: 100%;
        }
        .row-1 section::before{
            left: -7px;
        }
        .row-1 section .icon{
            left: -60px;
        }
    }
    @media(max-width: 440px){
        .wrapper-timeline .center-line,
        .row section::before,
        .row section .icon{
            display: none;
        }
        .wrapper-timeline .row{
            margin: 10px 0;
        }
    }
</style>
